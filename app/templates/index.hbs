<div class="jumbotron">
	<h1>Chapter 5</h1>
	<h3>
		My Ember Project
	</h3>
	<img src="https://dl.dropboxusercontent.com/u/26906414/cdn/img/learning-yeoman/yo-ember.png" class="img-" />
	<p class="lead">
		A starting point for a modern EmberJS application.
	</p>
</div>
<div id="pages" class="pages">
	<ul class="list-group">
		<ul class="list-unstyled">
			{{#each post in posts}}
			<li class="media post" data-id="{{post.id}}">
				<a class="pull-left" {{bind-attr href=post.title}}> 
					<img class="media-object img-thumbnail" alt="{{post.title}}" {{bind-attr src=post.image}}/> </a>
				<div class="media-body">
					<h4 class="media-heading">{{post.title}}</h4>
					<p>
						{{post.body}}
					</p>
				</div>
			</li>
			{{/each}}
		</ul>
	</ul>
</div>